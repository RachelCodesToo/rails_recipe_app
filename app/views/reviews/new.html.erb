<% if @review.recipe %>
<h1>New Review for <%= @review.recipe.recipeName%>!</h1>
<% else %>
<h1>New Review!</h1>
<% end %>

<%= render partial: "layouts/errors", locals: {object: @review} %>



<%= form_for([@review.recipe,@review]) do |f|%>

 <% if !@review.recipe %>
  <%= f.label :recipeName%>
  <%= f.collection_select :recipe_id, Recipe.all, :id, :recipeName %>
<% else %>
    <%= f.hidden_field :recipe_id %>
<% end %>

  <%= f.label :content %>
  <%= f.text_field :content %>


  <%= f.submit %>

<% end %> 